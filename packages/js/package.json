    "@swc/core": "^1.3.50",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.11.19",
    "angular-auth-oidc-client": "^17.0.0",
    "eslint": "^8.44.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-matcher-specific-error": "^1.0.0",
    "jose": "^5.2.2",
    "lint-staged": "^15.0.0",
    "nock": "^13.3.0",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0",
    "text-encoder": "^0.0.4",
    "type-fest": "^4.0.0",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": "@silverhand"
