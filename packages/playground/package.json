{
  "name": "@logto/playground",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "precommit": "lint-staged",
    "dev:tsc": "tsc -b -w --preserveWatchOutput",
    "dev:razzle": "razzle start",
    "start": "concurrently -c \"blue,cyan\" \"pnpm:dev:tsc\" -k \"pnpm:dev:razzle\"",
    "start:prod": "NODE_ENV=production node build/server.js",
    "build": "tsc -b && razzle build",
    "lint": "eslint --format pretty --ext .ts --ext .tsx src",
    "stylelint": "stylelint \"src/**/*.scss\"",
    "test": "razzle test --env=jsdom",
    "report": "WITH_REPORT=true razzle build"
  },
  "dependencies": {
    "@logto/client": "^0.0.1",
    "js-base64": "^3.6.1",
    "query-string": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.1.7",
    "@silverhand/eslint-config": "^0.4.0",
    "@silverhand/eslint-config-react": "^0.4.0",
    "@silverhand/ts-config": "^0.4.0",
    "@silverhand/ts-config-react": "^0.4.0",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-router-dom": "^5.1.7",
    "@types/webpack-env": "^1.16.0",
    "babel-preset-razzle": "^4.2.6",
    "concurrently": "^6.2.0",
    "eslint": "^8.1.0",
    "eslint-formatter-pretty": "^4.1.0",
    "html-webpack-plugin": "^4.5.2",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^0.9.0",
    "node-fetch": "2.6.6",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "razzle": "^4.2.6",
    "razzle-dev-utils": "^4.2.6",
    "razzle-plugin-scss": "^4.2.6",
    "stylelint": "^13.13.1",
    "text-encoder": "^0.0.4",
    "typescript": "^4.3.5",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "engines": {
    "node": ">=14.15.0",
    "pnpm": ">=6"
  },
  "eslintConfig": {
    "extends": "@silverhand/react"
  },
  "stylelint": {
    "extends": "@silverhand/eslint-config-react/.stylelintrc"
  },
  "prettier": "@silverhand/eslint-config/.prettierrc"
}