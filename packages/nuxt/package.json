    "h3": "^1.15.5",
    "happy-dom": "^20.0.8",
    "lint-staged": "^15.0.0",
    "nuxt": "^3.17.2",
    "prettier": "^3.0.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.9",
    "vue": "^3.5.13"
  },
  "eslintConfig": {
    "extends": "@silverhand"
  },
  "prettier": "@silverhand/eslint-config/.prettierrc",
