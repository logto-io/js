{
  "name": "@logto/nuxt",
  "version": "1.2.8",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/module.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "types": "./dist/module.d.mts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/logto-io/js.git",
    "directory": "packages/nuxt"
  },
  "scripts": {
    "precommit": "lint-staged",
    "dev": "nuxi dev playground",
