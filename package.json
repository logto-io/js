{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "changeset": "changeset",
    "prepare": "if test \"$NODE_ENV\" != \"production\" ; then husky ; fi",
    "sdk": "pnpm -r --filter=!@logto/*-sample",
    "build": "pnpm -r build",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@commitlint/types": "^19.0.0",
    "@jest/types": "^29.5.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-typescript": "^12.0.0",
    "@types/node": "^22.0.0",
    "husky": "^9.0.11",
    "rollup": "^4.22.4",
    "rollup-plugin-summary": "^3.0.0",
    "typescript": "^5.3.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "pnpm": {
    "overrides": {
      "braces@<3.0.3": "^3.0.3",
      "cookie@<0.7.0": "^0.7.0",
      "loader-utils@>=3.0.0 <3.2.1": "^3.2.1",
      "micromatch@<4.0.8": "^4.0.8",
      "nanoid@<3.3.8": "^3.3.8",
      "nanoid@>=4.0.0 <5.0.9": "^5.0.9",
      "path-to-regexp@<0.1.12": "^0.1.12",
      "msgpackr@<1.10.1": "^1.10.1",
      "rollup@>=3.0.0 <3.29.5": "^3.29.5",
      "semver@<5.7.2": "^5.7.2",
      "semver@>=7.0.0 <7.5.2": "^7.5.2",
      "send@<0.19.0": "^0.19.0",
      "vite@>=5.2.0 <5.2.15": "^5.2.15",
      "vue-template-compiler@>=2.0.0 <3.0.0": "^3.0.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "typescript": "^5.0.0"
      }
    }
  }
}
