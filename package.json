{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "changeset": "changeset",
    "prepare": "if test \"$NODE_ENV\" != \"production\" ; then husky ; fi",
    "sdk": "pnpm -r --filter=!@logto/*-sample",
    "build": "pnpm -r build",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@commitlint/types": "^19.0.0",
    "@jest/types": "^29.5.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.0.0",
    "@types/node": "^22.0.0",
    "husky": "^9.0.11",
    "rollup": "^4.22.4",
    "rollup-plugin-summary": "^3.0.0",
    "typescript": "^5.3.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0",
      "msgpackr@<1.10.1": "^1.10.1",
      "micromatch@<4.0.8": "^4.0.8",
      "cookie@<0.7.0": "^0.7.0",
      "path-to-regexp@<0.1.12": "^0.1.12",
      "on-headers@<1.1.0": "^1.1.0",
      "tmp@<=0.2.3": "^0.2.4",
      "send@<0.19.0": "^0.19.0",
      "valibot@>=0.31.0 <1.2.0": "^1.2.0",
      "@angular/common@<19.2.16": "^19.2.16",
      "@react-router/node@<7.9.5": "^7.9.5",
      "qs@<6.14.1": "^6.14.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "typescript": "^5.0.0"
      }
    }
  }
}
